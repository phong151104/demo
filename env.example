# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# LLM Configuration
# ============================================

# Google Gemini API Key (Recommended - Fast & Free tier available)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-2.5-flash

# OpenAI API Key (for GPT-4, GPT-3.5)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Anthropic Claude API Key (alternative)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# LLM Provider (google, openai, or anthropic)
LLM_PROVIDER=google

# LLM Settings
LLM_MAX_TOKENS=8000
LLM_TEMPERATURE=0.7

# ============================================
# Database Configuration (Optional)
# ============================================
# DATABASE_URL=postgresql://user:password@localhost/credit_scoring

# ============================================
# Model Storage
# ============================================
# MODEL_PATH=./models/

# ============================================
# Logging
# ============================================
# LOG_LEVEL=INFO

# ============================================
# App Configuration
# ============================================
# APP_ENV=development
# DEBUG_MODE=True

